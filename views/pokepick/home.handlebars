<div class="jumbotron">
    <div class="container">
        <div class="row">

            {{#unless auth}}
                <div class="col-md-3">
                    <p class="welcome">Welcome to pokepick<p>
                </div>
                <div class="col-md-3">
                    <div class="row">
                        <div class="container">
                            <a href="/login" class="btn btn-default btn-lg btn-square">login</a>
                        </div>
                    </div>
                    <br>
                    <div class="row">
                        <div class="container">
                            <a href="/signup" class="btn btn-default btn-lg btn-square">sign up</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-1"></div>
